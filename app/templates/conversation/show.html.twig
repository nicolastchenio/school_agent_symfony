{% extends 'base.html.twig' %}

{% block title %}{{ conversation.titre }} - IAgent{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <div class="bg-card rounded-xl p-8 border border-neon/20 shadow-2xl">
        <div class="flex justify-between items-start mb-6">
            <div>
                <h1 class="text-3xl font-bold text-neon">{{ conversation.titre }}</h1>
                <p class="text-gray-400 text-sm mt-1">
                    <i class="fas fa-calendar mr-1"></i>
                    {{ conversation.creerLe|date('d/m/Y à H:i') }}
                </p>
            </div>
            <a href="{{ path('app_conversation_index') }}" class="text-cyan-400 hover:underline">
                <i class="fas fa-arrow-left mr-1"></i>Retour
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
            <div>
                <p class="text-gray-400">Utilisateur</p>
                <p class="text-neon font-mono">
                    {{ conversation.utilisateur ? conversation.utilisateur.email : '—' }}
                </p>
            </div>
            <div>
                <p class="text-gray-400">Agent</p>
                <p class="text-cyan-400 font-mono">
                    {{ conversation.agent ? conversation.agent.nom : '—' }}
                </p>
            </div>
        </div>

        <div class="mt-8 flex space-x-4">
            <a href="{{ path('app_conversation_edit', {'id': conversation.idConversation}) }}" class="bg-cyan-600 text-white px-6 py-2 rounded-lg hover:bg-cyan-500 transition">
                <i class="fas fa-edit mr-2"></i>Éditer
            </a>
            {{ include('conversation/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
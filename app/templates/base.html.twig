{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}IAgent Admin{% endblock %}</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        neon: '#00f5ff',
                        dark: '#0f172a',
                        card: '#1e293b',
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <link href="https://rsms.me/inter/inter.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-dark text-gray-100 min-h-screen font-sans">

    <!-- Navbar futuriste -->
    <nav class="bg-gradient-to-r from-card to-dark border-b border-neon/20">
        <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
            <a href="{{ path('app_home') }}" class="text-2xl font-bold text-neon">
                <i class="fas fa-robot mr-2"></i>IAgent
            </a>
            <div class="space-x-6">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_agent_index') }}" class="hover:text-neon transition">Agents</a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_conversation_index') }}" class="hover:text-neon transition">Conversations</a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_matiere_index') }}" class="hover:text-neon transition">Mati√®res</a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_niveau_scolaire_index') }}" class="hover:text-neon transition">Niveaux</a>
                {% endif %}
                <a href="{{ path('app_ia_index') }}" class="hover:text-neon transition">IA</a>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-6 py-12">
        {% block body %}{% endblock %}
    </main>

    {% block javascripts %}{% endblock %}
</body>
</html>
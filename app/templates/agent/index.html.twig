{% extends 'base.html.twig' %}

{% block title %}Agents - IAgent{% endblock %}

{% block body %}
<div class="mb-8 flex justify-between items-center">
    <h1 class="text-4xl font-bold text-neon">Agents</h1>
    <a href="{{ path('app_agent_new') }}" class="bg-neon text-dark px-6 py-3 rounded-lg font-semibold hover:scale-105 transition transform">
        <i class="fas fa-plus mr-2"></i>Nouvel Agent
    </a>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for agent in agents %}
        <div class="bg-card rounded-xl p-6 border border-neon/10 hover:border-neon/50 transition-all duration-300 hover:shadow-2xl hover:shadow-neon/20">
            <div class="flex justify-between items-start mb-4">
                <h3 class="text-xl font-bold text-neon">{{ agent.nom }}</h3>
                <span class="text-xs bg-neon/20 text-neon px-2 py-1 rounded">ID: {{ agent.idAgent }}</span>
            </div>
            <p class="text-gray-400 text-sm mb-4 line-clamp-2">{{ agent.description }}</p>
            <div class="flex justify-between text-sm">
                <span class="text-neon">Temp: {{ agent.temperature }}</span>
                <span class="text-gray-500">Prompt: {{ agent.systemPrompt|length > 20 ? agent.systemPrompt|slice(0,20)~'...' : agent.systemPrompt }}</span>
            </div>
            <div class="mt-4 flex space-x-2">
                <a href="{{ path('app_agent_show', {'id': agent.idAgent}) }}" class="text-neon hover:underline">voir</a>
                <a href="{{ path('app_agent_edit', {'id': agent.idAgent}) }}" class="text-cyan-400 hover:underline">éditer</a>
            </div>
        </div>
    {% else %}
        <p class="text-gray-500 col-span-full text-center py-12">Aucun agent trouvé.</p>
    {% endfor %}
</div>
{% endblock %}
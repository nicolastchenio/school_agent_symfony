{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {{ form_row(form.nom, {
            'label_attr': {'class': 'text-neon font-medium'},
            'attr': {'class': 'bg-card border border-neon/30 rounded-lg px-4 py-3 text-white focus:border-neon focus:ring-neon'}
        }) }}
        {{ form_row(form.avatar, {
            'attr': {'class': 'bg-card border border-neon/30 rounded-lg px-4 py-3 text-white'}
        }) }}
        {{ form_row(form.temperature, {
            'attr': {'class': 'bg-card border border-neon/30 rounded-lg px-4 py-3 text-white'}
        }) }}
        {{ form_row(form.systemPrompt, {
            'attr': {'class': 'bg-card border border-neon/30 rounded-lg px-4 py-3 text-white'}

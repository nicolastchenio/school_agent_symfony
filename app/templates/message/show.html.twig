{% extends 'base.html.twig' %}

{% block title %}Message #{{ message.id }} - IAgent{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <div class="bg-card rounded-xl p-8 border border-neon/20 shadow-2xl">
        <div class="flex justify-between items-start mb-6">
            <div>
                <h1 class="text-3xl font-bold text-neon">Message #{{ message.id }}</h1>
                <p class="text-gray-400 text-sm mt-1">
                    Conversation #{{ message.conversation ? message.conversation.id : 'N/A' }}
                </p>
            </div>
            <a href="{{ path('app_message_index') }}" class="text-cyan-400 hover:underline">
                <i class="fas fa-arrow-left mr-1"></i>Retour
            </a>
        </div>

        <div class="space-y-6">
            <div>
                <p class="text-gray-400">Question</p>
                <p class="text-white font-mono text-lg bg-dark p-4 rounded-lg">{{ message.question }}</p>
            </div>
            <div>
                <p class="text-gray-400">Réponse</p>
                <p class="text-cyan-400 font-mono text-lg bg-dark p-4 rounded-lg">{{ message.reponse }}</p>
            </div>
        </div>

        <div class="mt-8 flex space-x-4">
            <a href="{{ path('app_message_edit', {'id': message.id}) }}" class="bg-cyan-600 text-white px-6 py-2 rounded-lg hover:bg-cyan-500 transition">
                <i class="fas fa-edit mr-2"></i>Éditer
            </a>
            {{ include('message/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}

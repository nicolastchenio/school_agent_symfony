{% extends 'base.html.twig' %}

{% block title %}Messages - IAgent{% endblock %}

{% block body %}
<div class="mb-8 flex justify-between items-center">
    <h1 class="text-4xl font-bold text-neon">Messages</h1>
    <a href="{{ path('app_message_new') }}" class="bg-neon text-dark px-6 py-3 rounded-lg font-semibold hover:scale-105 transition transform">
        <i class="fas fa-plus mr-2"></i>Nouveau Message
    </a>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for message in messages %}
        <div class="bg-card rounded-xl p-6 border border-neon/10 hover:border-neon/50 transition-all duration-300 hover:shadow-2xl hover:shadow-neon/20">
            <div class="flex justify-between items-start mb-4">
                <h3 class="text-xl font-bold text-neon truncate">{{ message.question }}</h3>
                <span class="text-xs bg-neon/20 text-neon px-2 py-1 rounded">ID: {{ message.id }}</span>
            </div>
            <p class="text-gray-400 text-sm mb-4 h-16 overflow-hidden">{{ message.reponse }}</p>
            <div class="text-sm text-gray-400">
                <i class="fas fa-comments mr-1"></i>
                Conversation #{{ message.conversation ? message.conversation.id : 'N/A' }}
            </div>
            <div class="mt-4 flex space-x-3">
                <a href="{{ path('app_message_show', {'id': message.id}) }}" class="text-neon hover:underline">voir</a>
                <a href="{{ path('app_message_edit', {'id': message.id}) }}" class="text-cyan-400 hover:underline">éditer</a>
            </div>
        </div>
    {% else %}
        <p class="text-gray-500 col-span-full text-center py-12">Aucun message trouvé.</p>
    {% endfor %}
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Connexion - IAgent{% endblock %}

{% block stylesheets %}
<style>
    .gradient-text {
        background: linear-gradient(135deg, #00f5ff, #0ea5e9);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .input-focus {
        transition: all 0.3s ease;
    }
    
    .input-focus:focus {
        border-color: #00f5ff;
        box-shadow: 0 0 20px rgba(0, 245, 255, 0.2);
    }
    
    .btn-glow:hover {
        box-shadow: 0 0 30px rgba(0, 245, 255, 0.5);
        transform: translateY(-2px);
    }
</style>
{% endblock %}

{% block body %}

<div class="min-h-screen flex items-center justify-center px-6 py-12">
    <!-- Éléments décoratifs -->
    <div class="absolute top-0 left-0 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl"></div>

    <div class="relative z-10 w-full max-w-md">
        <!-- Header -->
        <div class="text-center mb-10">
            <div class="inline-block mb-4 text-5xl text-neon">
                <i class="fas fa-sign-in-alt"></i>
            </div>
            <h1 class="text-4xl font-bold mb-2">
                <span class="gradient-text">Connexion</span>
            </h1>
            <p class="text-gray-400">Accédez à votre espace IAgent</p>
        </div>

        <!-- Error Alert -->
        {% if error %}
            <div class="mb-6 p-4 bg-red-500/10 border border-red-500/50 rounded-lg backdrop-blur">
                <div class="flex items-center text-red-400">
                    <i class="fas fa-exclamation-circle mr-3"></i>
                    <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </div>
            </div>
        {% endif %}

        <!-- Success Flash Message -->
        {% for message in app.flashes('success') %}
            <div class="mb-6 p-4 bg-green-500/10 border border-green-500/50 rounded-lg backdrop-blur">
                <div class="flex items-center text-green-400">
                    <i class="fas fa-check-circle mr-3"></i>
                    <span>{{ message }}</span>
                </div>
            </div>
        {% endfor %}

        <!-- Already logged in -->
        {% if app.user %}
            <div class="mb-6 p-4 bg-green-500/10 border border-green-500/50 rounded-lg backdrop-blur">
                <div class="flex items-center justify-between text-green-400">
                    <div>
                        <i class="fas fa-check-circle mr-2"></i>
                        Connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>
                    </div>
                </div>
            </div>
            <a href="{{ path('app_logout') }}" class="block w-full text-center px-6 py-3 bg-red-500/20 hover:bg-red-500/30 border border-red-500/30 rounded-lg text-red-400 font-semibold transition">
                <i class="fas fa-sign-out-alt mr-2"></i>Déconnexion
            </a>
        {% else %}
            <!-- Login Form -->
            <form method="post" class="space-y-6 bg-card/40 border border-neon/20 rounded-xl p-8 backdrop-blur">
                <!-- Email -->
                <div>
                    <label for="inputEmail" class="block text-sm font-semibold mb-2 text-gray-200">
                        <i class="fas fa-envelope mr-2 text-neon"></i>Adresse Email
                    </label>
                    <input
                        type="email"
                        value="{{ last_username }}"
                        name="email"
                        id="inputEmail"
                        class="input-focus w-full px-4 py-3 bg-dark border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none"
                        placeholder="votre@email.com"
                        autocomplete="email"
                        required
                        autofocus
                    >
                </div>

                <!-- Password -->
                <div>
                    <label for="inputPassword" class="block text-sm font-semibold mb-2 text-gray-200">
                        <i class="fas fa-lock mr-2 text-neon"></i>Mot de passe
                    </label>
                    <input
                        type="password"
                        name="password"
                        id="inputPassword"
                        class="input-focus w-full px-4 py-3 bg-dark border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none"
                        placeholder="••••••••"
                        autocomplete="current-password"
                        required
                    >
                </div>

                <!-- Remember me -->
                <div class="flex items-center">
                    <input
                        type="checkbox"
                        name="_remember_me"
                        id="remember_me"
                        class="w-4 h-4 accent-neon rounded cursor-pointer"
                    >
                    <label for="remember_me" class="ml-2 text-sm text-gray-400 cursor-pointer hover:text-gray-300">
                        Se souvenir de moi
                    </label>
                </div>

                <!-- CSRF Token -->
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                
                <!-- Submit Button -->
                <button type="submit" class="btn-glow w-full px-6 py-3 bg-neon text-dark font-bold rounded-lg hover:bg-cyan-400 transition duration-300">
                    <i class="fas fa-sign-in-alt mr-2"></i>Se connecter
                </button>

                <!-- Registration Link -->
                <div class="border-t border-gray-600 pt-6">
                    <p class="text-center text-gray-400">
                        Pas encore de compte ?
                        <a href="{{ path('app_register') }}" class="text-neon hover:text-cyan-400 font-semibold transition">
                            S'inscrire ici
                        </a>
                    </p>
                </div>
            </form>
        {% endif %}
    </div>
</div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Détails du Niveau Scolaire{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <div class="bg-card rounded-xl p-8 border border-neon/20 shadow-2xl">
        <div class="flex justify-between items-start mb-6">
            <h1 class="text-3xl font-bold text-neon">Niveau : {{ niveau_scolaire.niveau }}</h1>
            <a href="{{ path('app_niveau_scolaire_index') }}" class="text-cyan-400 hover:underline">
                <i class="fas fa-arrow-left mr-1"></i>Retour
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <p class="text-gray-400">ID</p>
                <p class="text-neon font-mono">{{ niveau_scolaire.id }}</p>
            </div>
            <div>
                <p class="text-gray-400">Niveau</p>
                <p class="text-white">{{ niveau_scolaire.niveau }}</p>
            </div>
        </div>

        <div class="mt-8 flex space-x-4">
            <a href="{{ path('app_niveau_scolaire_edit', {'id': niveau_scolaire.id}) }}" class="bg-cyan-600 text-white px-6 py-2 rounded-lg hover:bg-cyan-500 transition">
                <i class="fas fa-edit mr-2"></i>Éditer
            </a>
            {{ include('niveau_scolaire/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
